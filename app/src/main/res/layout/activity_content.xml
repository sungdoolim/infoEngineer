<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint"
    tools:context=".content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/constraint"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="404dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"

        android:src="@drawable/infowhalesea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:gravity="center"
    android:text="title"

    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"

    android:id="@+id/contentTITLE"/>
    <TextView
        android:id="@+id/contentTEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/back"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:text="dfsef"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentTITLE"
        app:layout_constraintVertical_bias="0.067"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:text="출처 : 시나공 정보처리기사 실기\n김정준,강윤석,김용갑,김우경,길벗알앤디 외\n출판사 : 길벗"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imglogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentTEXT"
        app:layout_constraintVertical_bias="0.473" />

    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="144dp"
        android:id="@+id/imglogo"
        android:layout_height="137dp"
        app:layout_constraintTop_toBottomOf="@+id/contentTEXT"
        android:src="@drawable/logo2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>